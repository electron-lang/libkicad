{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ]
}
